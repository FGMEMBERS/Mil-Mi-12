<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>mainrotor.ac</path>

  <animation>
    <object-name>axe0</object-name>
    <object-name>axe1</object-name>
    <object-name>axe2</object-name>
    <object-name>axe3</object-name>
  </animation>

  <!-- Blades -->
  <model>
    <name>Blade1</name>
    <path>Aircraft/Mil-Mi-12/Models/MainRotor/bladeD1.xml</path>
  </model>

  <!-- Blades -->
  <model>
    <name>Blade2</name>
    <path>Aircraft/Mil-Mi-12/Models/MainRotor/bladeD2.xml</path>
    <offsets>
      <heading-deg> 72 </heading-deg>
    </offsets>
  </model>

  <!-- Blades -->
  <model>
    <name>Blade3</name>
    <path>Aircraft/Mil-Mi-12/Models/MainRotor/bladeD3.xml</path>
    <offsets>
      <heading-deg> 144 </heading-deg>
    </offsets>
  </model>

  <!-- Blades -->
  <model>
    <name>Blade4</name>
    <path>Aircraft/Mil-Mi-12/Models/MainRotor/bladeD4.xml</path>
    <offsets>
      <heading-deg> 216 </heading-deg>
    </offsets>
  </model>

  <!-- Blades -->
  <model>
    <name>Blade5</name>
    <path>Aircraft/Mil-Mi-12/Models/MainRotor/bladeD5.xml</path>
    <offsets>
      <heading-deg> 288 </heading-deg>
    </offsets>
  </model>

  <animation>
    <name>rotorcomplet</name>
    <object-name>axe0</object-name>
    <object-name>axe1</object-name>
    <object-name>axe2</object-name>
    <object-name>axe3</object-name>
    <object-name>Blade1</object-name>
    <object-name>Blade2</object-name>
    <object-name>Blade3</object-name>
    <object-name>Blade4</object-name>
    <object-name>Blade5</object-name>
  </animation>

  <!-- Rotation du rotor -->
  <animation>
    <type>rotate</type>
    <object-name>rotorcomplet</object-name>
    <property>rotors/main/roll-deg</property>
    <center>
       <x-m> 0.000 </x-m>
       <y-m> 0.000 </y-m>
       <z-m> 0.579 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>rotorcomplet</object-name>
    <property>rotors/main/yaw-deg</property>
    <center>
       <x-m> 0.000 </x-m>
       <y-m> 0.000 </y-m>
       <z-m> 0.579 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>rotorcomplet</object-name>
    <property>rotors/main/blade[0]/position-deg</property>
<!--
    <property>rotors/main/blade[1]/position-deg</property>
-->
    <factor> -1 </factor>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z>  1 </z>
    </axis>
  </animation>

</PropertyList>
