    </offsets>
  </model> -->

  <!-- Portes cargo arriere -->
  <animation>
    <type>rotate</type>
    <object-name>intbaie</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> 30 </factor>
    <center>
      <x-m>  9.280 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -4.973 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intbaieG</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> -80 </factor>
    <axis>
      <x1-m> 12.213 </x1-m>
      <y1-m> -2.406 </y1-m>
      <z1-m> -2.094 </z1-m>
      <x2-m> 13.609 </x2-m>
      <y2-m> -2.270 </y2-m>
      <z2-m> -1.200 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>intbaieD</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> 80 </factor>
    <axis>
      <x1-m> 12.213 </x1-m>
      <y1-m>  2.406 </y1-m>
      <z1-m> -2.094 </z1-m>
      <x2-m> 13.609 </x2-m>
      <y2-m>  2.270 </y2-m>
      <z2-m> -1.200 </z2-m>
    </axis>
  </animation>

</PropertyList>

